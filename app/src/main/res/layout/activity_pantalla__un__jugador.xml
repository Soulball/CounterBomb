<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pantalla_Un_Jugador">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/negro"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blanco">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CARTAS"
                android:layout_weight="1"
                android:layout_marginVertical="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/blanco"
                android:background="@color/azul"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TURNOS"
            android:layout_weight="1"
            android:layout_marginVertical="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="@color/blanco"
            android:background="@color/azul"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginVertical="10dp"
        android:background="@color/negro">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:src="@drawable/BombaD"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:src="@drawable/BombaI"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:src="@drawable/Dia"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:src="@drawable/Llamada"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:src="@drawable/Cambio"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:src="@drawable/Duplicador"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:src="@drawable/Regresar"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:src="@drawable/Desarme"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:src="@drawable/Boca"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CADA CARTA TIENE UN TIPO DE TURNO Y SOLO PUEDE JUGARSE SI EL TURNO ES COMPATIBLE"
                android:textColor="@color/blanco"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginVertical="10dp"
                android:background="@color/negro"/>

        </LinearLayout>

    </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>